{
  "name": "node-typescript-and-test-esm-example",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/main.ts",
    "nodemon": "nodemon --exec node --no-warnings=ExperimentalWarning --loader ts-node/esm src/main.ts",
    "test": "node --test --no-warnings=ExperimentalWarning --loader ts-node/esm test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/node": "*",
    "nodemon": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "types": [
    "node"
  ]
}
